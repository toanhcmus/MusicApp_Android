<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity"
    android:background="@color/dark_200"
    android:orientation="vertical"
    android:id="@+id/loginAct">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_in_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_in_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/loginUI"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_guideline_start"
        app:layout_constraintBottom_toTopOf="@id/logo_guideline_end"
        android:background="@drawable/ic_launcher_foreground"
        app:layout_constraintDimensionRatio="1:1"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginUI"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/log_in_guideline_end"
        app:layout_constraintTop_toBottomOf="@id/log_in_guideline_start"
        android:background="@drawable/login_ui"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/loginUI_guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".025"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/loginUI_guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline_bound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline_bound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".8"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/email_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/email_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/pass_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".3"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/pass_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/login_btn_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".42"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/login_btn_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".50"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alt_login_btn_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".55"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alt_login_btn_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/forget_pass_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".70"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/forget_pass_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sign_up_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".85"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sign_up_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".90"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="LOGIN"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@id/loginUI_guideline_start"
            app:layout_constraintBottom_toTopOf="@id/loginUI_guideline_end"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/svn_aguda_black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/email_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/email_guideline_bottom"
            android:background="@drawable/white_round_search_view"
            android:elevation="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Email:"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/svn_aguda_black"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/EtEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:padding="10dp"
                android:fontFamily="@font/svn_aguda_black"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/pass_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/pass_guideline_bottom"
            android:background="@drawable/white_round_search_view"
            android:elevation="10dp"
            android:layout_gravity="center">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Password:"
                android:autoSizeTextType="uniform"
                android:gravity="bottom"
                android:fontFamily="@font/svn_aguda_black"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/EtPwdLogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/svn_aguda_black"
                android:layout_gravity="center_horizontal|center_vertical"
                android:inputType="textPassword"
                android:layout_weight="3"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/login_btn_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/login_btn_guideline_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/svn_aguda_black"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_btn"
            />

        <LinearLayout
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/alt_login_btn_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/alt_login_btn_guideline_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/gmailLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/gmail_svg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/gmail_icon"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Gmail"
                    android:textStyle="bold"
                    android:fontFamily="@font/svn_aguda_black"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/gmail_svg"/>

            </RelativeLayout>



        </LinearLayout>

        <Button
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/forget_pass_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/forget_pass_guideline_bottom"
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="Forget Password?"
            android:fontFamily="@font/svn_aguda_black"
            android:textAllCaps="false"
            android:autoSizeTextType="uniform" />

        <Button
            app:layout_constraintStart_toStartOf="@id/left_guideline_bound"
            app:layout_constraintEnd_toEndOf="@id/right_guideline_bound"
            app:layout_constraintTop_toBottomOf="@id/sign_up_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/sign_up_guideline_bottom"
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:fontFamily="@font/svn_aguda_black"
            android:gravity="center"
            android:text="Don't have an Account? Sign Up!"
            android:autoSizeTextType="uniform" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>