<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Spotify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="itemIconTint">@color/dark_gray</item>
        <item name="itemActiveIndicatorStyle">@color/dark_gray</item>
        <item name="colorBackgroundFloating">@color/light_green</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">40sp</item><!-- text size in menu-->
        <item name="fontFamily"> @font/svn_aguda_black </item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40sp</item>
        <item name="listPreferredItemHeightSmall">40sp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="slider_menu_text_style" parent="Base.Theme.Spotify">
        <item name="android:fontFamily"> @font/svn_aguda_black </item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Spotify" parent="Base.Theme.Spotify" />
</resources>